<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Rex, your friendly prescription management system</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="drugEntry-drugName">Drug Name</label>
            <input type="text" id="drugEntry-drugName" class="form-control" aria-describedby="drugEntry-drugName" placeholder="Enter Drug Name">
          </div>
          <div class="form-group">
            <label for="drugEntry-description">Example Description</label>
            <textarea class="form-control" id="drugEntry-description" aria-describedby="drugEntry-description" placeholder="Enter Drug Description"></textarea>
          </div>
          <div class="form-group">
            <label for="drugEntry-dosage">Drug Dosage</label>
            <textarea class="form-control" id="drugEntry-dosage" aria-describedby="drugEntry-dosage" placeholder="Enter Drug Dosage"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="adminEntryList" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="drugEntry/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>


